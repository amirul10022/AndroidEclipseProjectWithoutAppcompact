<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/sendDataTextViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     	android:layout_marginTop="10dp"
        android:text="@string/main_layout_text_view" />
    <EditText 
        android:id="@+id/sendDataEditTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_toRightOf="@+id/sendDataTextViewID"
      
        
        />
    <Button 
        android:id="@+id/mainActivityButtonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendDataEditTextID"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/main_layout_button_text"
        
        />
    

</RelativeLayout>
